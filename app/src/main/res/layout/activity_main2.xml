                app:backgroundTint="@color/design_default_color_on_secondary" />

            <Button
                android:id="@+id/meat_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="@font/sorts_mill_goudy"
                android:text="Meat"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/pizza_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="@font/sorts_mill_goudy"
                android:text="Pizza"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/drinks_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="@font/sorts_mill_goudy"
                android:text="Desert"
                android:textAllCaps="false"
