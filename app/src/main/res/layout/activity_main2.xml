                app:layout_constraintStart_toEndOf="@+id/asparagus_recipe_image"
                app:layout_constraintTop_toBottomOf="@+id/asparagus_recipe_title"
                app:layout_constraintVertical_bias="0.307" />

            <Button
                android:id="@+id/asparagus_recipe_btn"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_brown_button"
                android:fontFamily="@font/sofia"
                android:text="Add"
                android:textColor="#000000"
                android:textSize="20dp"
                app:backgroundTint="#CD9F45"
                app:layout_constraintStart_toEndOf="@+id/asparagus_recipe_image"
                app:layout_constraintTop_toBottomOf="@+id/asparagus_recipe_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>
